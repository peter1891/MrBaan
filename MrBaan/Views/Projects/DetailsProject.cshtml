@model MrBaan.Models.ProjectModel

@{
    ViewData["Title"] = "Details project";
}

<div class="grid-parrent grid-parrent-detail">
    <div class="grid-child-detail-info flex-parrent-column">
        <div>
            <h1>@Model.Name</h1>
        </div>
        <div>
            <p>@Model.Description</p>
        </div>
        <div class="flex-child-grow">
            <p>Aangemaakt op: @Model.CreatedOn.ToShortDateString()</p>
        </div>
        <div>
            <a href="@Model.GitUrl">Ga naar repository</a>
            <a asp-action="Index">Terug naar overzicht</a>
        </div>
    </div>
    <div class="grid-child-detail-image">
        <div class="slider-wrapper">
            <div class="slider-image">
                @foreach (var projectImage in Model.ProjectImages)
                {
                    <img id="@projectImage.FileName" src="@projectImage.FilePath" alt="@Model.Name" style="width: 100%; height: 100%; object-fit: cover;" />
                }
            </div>
            <div class="slider-nav">
                @foreach (var projectImage in Model.ProjectImages)
                {
                    <a href="#@projectImage.FileName"></a>
                }
            </div>
        </div>
    </div>
</div>